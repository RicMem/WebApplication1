@{
    ViewData["Title"] = "Home Page";
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .hero-section {
            background-color: #000000;
            color: #ffffff;
            text-align: center;
            padding: 100px 0;
        }

        .hero-section h1 {
            font-size: 3rem;
            margin-bottom: 20px;
        }

        .hero-section p {
            font-size: 1.2rem;
            margin-bottom: 40px;
        }

        .hero-section a {
            color: #ffffff;
            text-decoration: underline;
        }

        .features {
            padding: 50px 0;
            text-align: center;
        }

        .feature-icon {
            font-size: 2.5rem;
            margin-bottom: 20px;
            color: #000000;
        }

        .feature-heading {
            font-size: 1.5rem;
            margin-bottom: 20px;
        }
    </style>
</head>

<body>

    <div class="hero-section">
        <h1>WELCOME TO OUR WEB APP</h1>
        <P>GROUP 3M</P>
        <p>Explore the world of <a href="https://docs.microsoft.com/aspnet/core" target="_blank">ASP.NET Core</a> and build amazing web applications.</p>
    </div>

    <div class="features">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <i class="feature-icon fas fa-code"></i>
                    <h2 class="feature-heading">Powerful Framework</h2>
                    <p>ASP.NET Core provides a robust and flexible framework for building modern web applications.</p>
                </div>
                <div class="col-md-4">
                    <i class="feature-icon fas fa-cogs"></i>
                    <h2 class="feature-heading">Versatile</h2>
                    <p>Build web apps, APIs, and microservices with ASP.NET Core, tailored to your specific needs.</p>
                </div>
                <div class="col-md-4">
                    <i class="feature-icon fas fa-mobile-alt"></i>
                    <h2 class="feature-heading">Mobile Friendly</h2>
                    <p>Create responsive and mobile-friendly applications that work seamlessly on any device.</p>
                </div>
            </div>
        </div>
    </div>

</body>

</html>
